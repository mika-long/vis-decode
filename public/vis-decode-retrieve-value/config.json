{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Vis Decode Retrieve Value",
        "version": "pilot",
        "authors": [
            "Sheng Long"
        ],
        "date": "2025-10-16",
        "description": "A study to decode the retrieve value of a stimulus",
        "organizations": [
            "Northwestern University"
        ]
    },
    "uiConfig": {
        "contactEmail": "contact@revisit.dev",
        "helpTextPath": "basic-questionnaire-study/assets/help.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "withSidebar": true
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "basic-questionnaire-study/assets/introduction.md",
            "response": []
        },
        "first-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q1-name",
                    "prompt": "What is your first name?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter your first name"
                },
                {
                    "id": "q2-color",
                    "prompt": "What is your favorite color?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "dropdown",
                    "placeholder": "Please choose your favorite color",
                    "options": ["Red", "Blue", "My favorite color is not shown here."]
                }
            ]
        },
        "second-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q3-satisfaction",
                    "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Not Enjoyable",
                    "rightLabel": "Very Enjoyable",
                    "numItems": 5
                }
            ]
        },
        "vega-demo": {
            "meta": {
                "metadata": 3
            }, 
            "description": "Using Vega with an external file", 
            "instruction": "Do something lol", 
            "type": "vega", 
            "path": "vis-decode-retrieve-value/specs/0.json", 
            "nextButtonLocation": "belowStimulus", 
            "response": [
                {
                    "id": "vegaResponse1", 
                    "prompt": "Your input", 
                    "location": "belowStimulus", 
                    "type": "numerical"
                }
            ]

        }
    },
    "importedLibraries": [
        "virtual-chinrest"
    ],
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "$virtual-chinrest.se.full",
            "first-question-set",
            "second-question-set", 
            "vega-demo"
        ]
    }
}